# File: .env.template

# Core configuration
OPENAI_API_KEY=sk-xxxx
OPENAI_MODEL=gpt-4o-mini
# NATS connection settings
NATS_URL=nats://nats:4222
NATS_SUBJECT_PREFIX=observability

# Agent-specific configuration
PROMETHEUS_URL=http://localhost:9090
LOKI_URL=http://localhost:3100
TEMPO_URL=http://localhost:3100

# Knowledge base configuration
QDRANT_URL=http://qdrant:6333
POSTMORTEM_TEMPLATE_DIR=/app/templates
RUNBOOK_DIR=/app/runbooks

# K8s Command Backend configuration
MONGODB_URI=mongodb://mongodb:27017/k8s-command

# Deployment agent configuration
ARGOCD_SERVER=https://argocd-server:443
ARGOCD_TOKEN=your-argocd-token
GIT_REPO_PATH=/app/repo

# Orchestrator configuration
RESPONSE_TIMEOUT_SECONDS=300

# Agent enable/disable configuration
ENABLE_METRIC_AGENT=true
ENABLE_LOG_AGENT=true
ENABLE_DEPLOYMENT_AGENT=true
ENABLE_TRACING_AGENT=true
ENABLE_ROOT_CAUSE_AGENT=true
ENABLE_RUNBOOK_AGENT=true
ENABLE_NOTIFICATION_AGENT=true
ENABLE_POSTMORTEM_AGENT=true
ENABLE_K8S_COMMAND_BACKEND=true
